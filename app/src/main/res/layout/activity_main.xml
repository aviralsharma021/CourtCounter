<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:gravity="center_horizontal"
                android:padding="4dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/score_for_a"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <Button
                android:text="3 Points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/point3a"
                android:layout_margin="8dp"
                android:onClick="Aincrement3"/>

            <Button
                android:text="2 Points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/point2a"
                android:layout_margin="8dp"
                android:onClick="Aincrement2"/>


            <Button
                android:text="Free Throw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Afree_throw"
                android:layout_margin="8dp"
                android:onClick="Afreethrow"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/score_for_b"
                android:gravity="center_horizontal"
                android:padding="4dp"/>

            <Button
                android:text="3 Points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/point3b"
                android:layout_margin="8dp"
                android:onClick="Bincrement3"/>

            <Button
                android:text="2 Points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/point2b"
                android:layout_margin="8dp"
                android:onClick="Bincrement2"/>


            <Button
                android:text="Free Throw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Bfree_throw"
                android:layout_margin="8dp"
                android:onClick="Bfreethrow"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:onClick="Reset"/>


</LinearLayout>
